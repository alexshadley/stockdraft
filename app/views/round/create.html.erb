<div class="container">
  <div class="row justify-content-center">
    <div class="col col-4">
      <h1 class="create-form">New Round</h1>

      <%= form_with url: "/round/create", method: :post do |form| %>
      <%= form.label :name, "Round name:" %>
      <%= form.text_field :name %>
      <%= form.submit "Create" %>
      <% end %>
    </div>
  </div>
</div>