<div class="container">
  <div class="row justify-content-center">
    <h1>StockDraft</h1>
  </div>

  <div class="row justify-content-center">
    <h4>New Round</h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with url: "/round/create", method: :post do |form| %>
      <%= form.text_field :name, placeholder: "Round name" %>
      <button type="submit" class="btn btn-primary">Create</button>
    <% end %>
  </div>

</div>